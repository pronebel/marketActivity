.title{
  background: #fff;
  padding:20rpx;
  border-bottom:1rpx solid #e4e4e4;

}
.title>span{
  flex: 1;
  text-align: center
}
 .title>span:first-child{
  flex: 2
}
.title>span:nth-child(2){
  flex: 2
}  

.nodata{
  padding: 120rpx 50rpx;
}
.nodata li{
  text-align: center;
  margin-bottom: 40rpx;
  display: block
}
.people{
  width: 140rpx;
  height: 140rpx;
  border: 1px solid #ccc;
  margin: 0 auto
}
.grey{
  color: #999;
  line-height: 40rpx
}
button{
  background: #FF6B4E ;
  color: #fff;
  border-radius: 100rpx
}

.tab{
  width: 320rpx;
  height: 60rpx;
  margin: 30rpx auto;
  border: 2px solid #FF6B4E;
  border-radius: 15rpx;
  color: #FF6B4E
}

.tab>span{
   width: 50%;
    text-align: center;
    line-height: 60rpx
}
.act{
  background: #FF6B4E;
  color: #fff
}

.addItem{
  background: #fff;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
  overflow: hidden;
  border-bottom:1rpx solid #e4e4e4;
}
.addItem span{
  width: 40%;
   text-align: center; 
  display: inline-block;
   overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis;   
}
.addItem span:last-child{
  width: 20%;
}
.addItem span:first-child{
  text-align: left
}
.recordlist{
  overflow: hidden;
  margin-bottom: 20rpx
}

.comItemArrow {
font-size:28rpx;
color:#1C1C1C;
height:88rpx;
display:block;
line-height:88rpx;
box-sizing:border-box;

}


.fr {
float:right
}
.red{
  color: #FF6B4E;
  font-size: 30rpx
}
.dbi{display: inline-block}
.bottom{
  position: fixed;
  bottom: 0;
  background: #fff;
  width: 100%;
  padding: 10rpx 0;
  color: #666;
  font-size: 24rpx
}
.bottom p{margin-top: 10rpx}
.bottom li{
  width:33%;
  text-align: center
}
radio{
  color: #FF6B4E 
}